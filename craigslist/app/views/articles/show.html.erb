<h1><%= @category.name %></h1>
<h2><%= @article.title %></h2>

<p><%= @article.body %></p>

<% if @article.user_id == current_user.id %>
  <h4>
    <%= link_to "Edit", edit_category_article_path(@category, @article) %> |
    <%= link_to "Delete", category_article_path(@category, @article),
                          method: :delete,
                          data: { confirm: "Are you sure?" } %>
  </h4>
<% end %>
